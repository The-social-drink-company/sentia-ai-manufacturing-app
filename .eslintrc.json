{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:security/recommended"
  ],
  "ignorePatterns": [
    "dist/**",
    "build/**",
    "*.min.js",
    "node_modules/**",
    "coverage/**",
    "*.config.js",
    "*.config.cjs",
    "*.config.mjs",
    "public/**",
    "scripts/**",
    "tests/**/*.test.js",
    "mcp-server/**",
    "database/**"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-console": "error",
    "no-debugger": "error",
    "security/detect-object-injection": "warn",
    "security/detect-non-literal-fs-filename": "warn",
    "react/jsx-no-target-blank": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "no-throw-literal": "error",
    "no-return-await": "error",
    "require-await": "error"
  }
}