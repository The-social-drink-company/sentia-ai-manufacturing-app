# Sentia MCP Server Environment Variables
# Copy this to .env and configure for your deployment

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Xero Configuration
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=https://your-railway-app.railway.app/api/xero/callback
XERO_SCOPE=accounting.transactions,accounting.contacts,accounting.settings
XERO_ACCESS_TOKEN=your_xero_access_token
XERO_REFRESH_TOKEN=your_xero_refresh_token
XERO_TENANT_ID=your_xero_tenant_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# Railway Configuration
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your_project_id
RAILWAY_SERVICE_ID=your_service_id
