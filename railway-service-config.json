{
  "services": {
    "main-app": {
      "name": "sentia-manufacturing-dashboard",
      "config": "railway.json",
      "healthCheck": "/api/health",
      "port": 5000,
      "priority": 1
    },
    "mcp-server": {
      "name": "sentia-mcp-server",
      "config": "railway-mcp.json",
      "healthCheck": "/health",
      "port": 6002,
      "priority": 2,
      "dependencies": ["main-app"]
    },
    "test-agent": {
      "name": "sentia-autonomous-test-agent",
      "config": "railway-test-agent.json", 
      "healthCheck": "/health",
      "port": 6001,
      "priority": 3,
      "dependencies": ["main-app", "mcp-server"]
    }
  },
  "environments": {
    "development": {
      "autoScale": false,
      "replicas": 1,
      "resources": {
        "cpu": "1000m",
        "memory": "1Gi"
      }
    },
    "testing": {
      "autoScale": false,
      "replicas": 1,
      "resources": {
        "cpu": "1000m", 
        "memory": "1Gi"
      }
    },
    "production": {
      "autoScale": true,
      "minReplicas": 1,
      "maxReplicas": 3,
      "resources": {
        "cpu": "2000m",
        "memory": "2Gi"
      }
    }
  },
  "monitoring": {
    "healthCheckInterval": "30s",
    "healthCheckTimeout": "10s",
    "healthCheckRetries": 3,
    "alerting": {
      "enabled": true,
      "channels": ["slack", "email"],
      "thresholds": {
        "responseTime": "5s",
        "errorRate": "5%",
        "uptime": "99.9%"
      }
    }
  },
  "deploymentStrategy": {
    "type": "rolling",
    "maxUnavailable": 1,
    "maxSurge": 1,
    "progressDeadlineSeconds": 600
  }
}