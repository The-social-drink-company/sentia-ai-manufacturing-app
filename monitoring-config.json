{
  "monitoring": {
    "name": "Sentia Manufacturing Dashboard Monitoring System",
    "version": "1.0.0",
    "description": "Comprehensive monitoring and self-correction system for Sentia Manufacturing Dashboard deployments",

    "urls": [
      {
        "name": "Railway Production",
        "url": "https://sentia-manufacturing-dashboard-production.up.railway.app",
        "aliases": ["https://sentiaprod.financeflo.ai"],
        "environment": "production",
        "priority": "high",
        "expectedFeatures": ["dashboard", "phase4", "predictive-maintenance", "smart-inventory"],
        "healthCheckPath": "/api/health",
        "deploymentBranch": "production"
      },
      {
        "name": "Railway Development",
        "url": "https://sentia-manufacturing-dashboard-development.up.railway.app",
        "aliases": ["https://sentiadeploy.financeflo.ai"],
        "environment": "development",
        "priority": "high",
        "expectedFeatures": ["dashboard", "phase4", "predictive-maintenance", "smart-inventory"],
        "healthCheckPath": "/api/health",
        "deploymentBranch": "development"
      },
      {
        "name": "Railway Test",
        "url": "https://sentiatest.financeflo.ai",
        "aliases": [],
        "environment": "test",
        "priority": "medium",
        "expectedFeatures": ["dashboard", "phase4"],
        "healthCheckPath": "/api/health",
        "deploymentBranch": "test"
      },
      {
        "name": "Localhost 3000",
        "url": "http://localhost:3000",
        "aliases": [],
        "environment": "local",
        "priority": "low",
        "expectedFeatures": ["dashboard", "development"],
        "healthCheckPath": "/api/health",
        "startCommand": "npm run dev:client"
      },
      {
        "name": "Localhost 3002",
        "url": "http://localhost:3002",
        "aliases": [],
        "environment": "local",
        "priority": "low",
        "expectedFeatures": ["dashboard"],
        "healthCheckPath": "/api/health",
        "startCommand": "npm run dev"
      },
      {
        "name": "Localhost 3003",
        "url": "http://localhost:3003",
        "aliases": [],
        "environment": "local",
        "priority": "low",
        "expectedFeatures": ["dashboard"],
        "healthCheckPath": "/api/health",
        "startCommand": "npm run dev"
      }
    ],

    "phase4Features": {
      "required": ["PredictiveMaintenanceWidget", "SmartInventoryWidget"],
      "optional": [
        "predictive-maintenance",
        "smart-inventory",
        "maintenance-alerts",
        "inventory-optimization",
        "ai-insights",
        "machine-learning"
      ],
      "apiEndpoints": [
        "/api/predictive-maintenance",
        "/api/smart-inventory",
        "/api/dashboard/widgets"
      ]
    },

    "monitoring": {
      "checkInterval": 300000,
      "requestTimeout": 30000,
      "maxRetries": 3,
      "retryBackoff": [2000, 5000, 10000],
      "healthCheckTimeout": 10000,
      "failureThreshold": 3,
      "recoveryThreshold": 2
    },

    "corrections": {
      "enabled": true,
      "autoRestart": true,
      "autoRedeploy": true,
      "maxCorrections": 5,
      "correctionCooldown": 300000,
      "deploymentTimeout": 600000,
      "restartTimeout": 60000
    },

    "notifications": {
      "enabled": true,
      "levels": ["error", "warning", "success"],
      "channels": {
        "console": true,
        "file": true,
        "webhook": false
      }
    },

    "logging": {
      "level": "info",
      "file": "monitoring.log",
      "statusFile": "monitoring-status.json",
      "maxFileSize": "10MB",
      "maxFiles": 5,
      "format": "json"
    },

    "performance": {
      "responseTimeThreshold": 5000,
      "uptimeThreshold": 99.0,
      "errorRateThreshold": 5.0,
      "memoryUsageThreshold": 80.0,
      "cpuUsageThreshold": 80.0
    },

    "security": {
      "userAgent": "Sentia-Monitoring-Agent/1.0",
      "headers": {
        "X-Monitoring-Agent": "Sentia-Dashboard",
        "X-Environment": "monitoring"
      },
      "validateSSL": true,
      "allowSelfSigned": false
    },

    "deployment": {
      "railwayProjects": {
        "production": "sentia-manufacturing-dashboard-production",
        "development": "sentia-manufacturing-dashboard-development",
        "test": "sentia-manufacturing-dashboard-test"
      },
      "gitBranches": {
        "production": "production",
        "development": "development",
        "test": "test"
      },
      "buildCommands": ["npm install", "npm run build"],
      "healthCheckCommands": ["npm run test:run", "npm run lint"]
    }
  },

  "alerts": {
    "downtime": {
      "threshold": 60000,
      "message": "Service is down for more than 1 minute"
    },
    "missingFeatures": {
      "threshold": 1,
      "message": "Phase 4 features not detected"
    },
    "slowResponse": {
      "threshold": 10000,
      "message": "Response time exceeds 10 seconds"
    },
    "highErrorRate": {
      "threshold": 10.0,
      "message": "Error rate exceeds 10%"
    }
  },

  "recovery": {
    "strategies": {
      "local": ["restart_server", "clear_cache", "reinstall_dependencies", "rebuild_project"],
      "remote": ["trigger_redeploy", "rollback_deployment", "scale_service", "restart_service"]
    },

    "escalation": [
      {
        "level": 1,
        "actions": ["restart"],
        "wait": 120000
      },
      {
        "level": 2,
        "actions": ["redeploy"],
        "wait": 300000
      },
      {
        "level": 3,
        "actions": ["rollback"],
        "wait": 600000
      }
    ]
  },

  "dashboard": {
    "enabled": true,
    "port": 3001,
    "refreshInterval": 30000,
    "showMetrics": true,
    "showLogs": true,
    "showAlerts": true,
    "authentication": false
  }
}
