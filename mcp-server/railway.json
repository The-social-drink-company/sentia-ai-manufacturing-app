{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "providers": ["node"],
      "excludeProviders": ["python"]
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "development": {
      "variables": {
        "NODE_ENV": "development",
        "PORT": "${{ RAILWAY_PORT }}",
        "LOG_LEVEL": "debug",
        "JWT_SECRET": "sentia-mcp-secret-key"
      }
    },
    "testing": {
      "variables": {
        "NODE_ENV": "test",
        "PORT": "${{ RAILWAY_PORT }}",
        "LOG_LEVEL": "info",
        "JWT_SECRET": "sentia-mcp-secret-key"
      }
    },
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{ RAILWAY_PORT }}",
        "LOG_LEVEL": "info",
        "JWT_SECRET": "sentia-mcp-secret-key"
      }
    }
  }
}
