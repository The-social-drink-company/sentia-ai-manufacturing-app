{
  "name": "Sentia Manufacturing Dashboard",
  "short_name": "Sentia",
  "description": "Manufacturing planning and optimization dashboard for GABA supplements production",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0d6efd",
  "orientation": "portrait-primary",
  "categories": ["business", "productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "scope": "/",
  "icons": [
