{
  "name": "sentia-manufacturing-dashboard",
  "private": true,
  "version": "1.0.10",
  "description": "Enterprise Manufacturing Dashboard with React/Vite frontend and Node.js backend",
  "type": "module",
  "engines": {
    "node": ">=20.0.0 <25.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:client\" \"pnpm run dev:server\"",
    "dev:client": "vite --host --port 3000",
    "dev:server": "nodemon server/index.js",
    "build": "vite build",
    "start": "node server/index.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "lint": "eslint src server --ext .js,.jsx",
    "lint:fix": "eslint src server --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json}\" \"server/**/*.{js,json}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json}\" \"server/**/*.{js,json}\" \"*.{js,json,md}\""
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.17.4",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.21.1",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.13.3",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "nodemon": "^3.1.7",
    "playwright": "^1.49.0",
    "postcss": "^8.5.1",
    "prettier": "^3.3.3",
    "vite": "^7.1.7",
    "vitest": "^2.1.8"
  }
}
