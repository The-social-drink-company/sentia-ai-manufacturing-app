# Sentia MCP Server Environment Configuration Template
# Copy this file to .env and configure with your actual values

# ==========================================
# CORE MCP SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
LOG_LEVEL=info
PORT=9001
JWT_SECRET=your-secure-secret-key-here

# ==========================================
# AI INTEGRATION (REQUIRED)
# ==========================================
# Claude 3.5 Sonnet API Key (Required for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# GPT-4 Turbo API Key (Required for AI features)  
OPENAI_API_KEY=your-openai-api-key-here

# Google AI (Gemini Pro) API Key (Optional)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Local LLM Configuration (Optional)
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# ==========================================
# EXTERNAL API INTEGRATIONS
# ==========================================

# Xero Accounting Integration
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:3000/xero/callback
XERO_SCOPES=accounting.transactions,accounting.contacts,accounting.settings

# Shopify Multi-Store Integration  
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

# Amazon SP-API Integration
AMAZON_SP_API_ACCESS_KEY=your-amazon-access-key
AMAZON_SP_API_SECRET_KEY=your-amazon-secret-key
AMAZON_SP_API_ROLE_ARN=your-amazon-role-arn
AMAZON_SP_API_CLIENT_ID=your-amazon-client-id
AMAZON_SP_API_CLIENT_SECRET=your-amazon-client-secret
AMAZON_SP_API_REFRESH_TOKEN=your-amazon-refresh-token
AMAZON_MARKETPLACE_ID=your-marketplace-id

# Unleashed Inventory Management
UNLEASHED_API_ID=your-unleashed-api-id  
UNLEASHED_API_KEY=your-unleashed-api-key
UNLEASHED_API_URL=https://api.unleashedsoftware.com

# TradeGecko/QuickBooks Integration
TRADEGECKO_API_KEY=your-tradegecko-api-key
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret

# Neon Database (Used by main app, referenced here for completeness)
NEON_DATABASE_URL=postgresql://username:password@host/database

# ==========================================
# RAILWAY-SPECIFIC CONFIGURATION
# ==========================================
# Note: Railway automatically provides RAILWAY_PORT
# Use ${{ RAILWAY_PORT }} in railway.json for dynamic port assignment

# CORS Origins (Update with your Railway domains)
CORS_ORIGINS=https://sentia-manufacturing-dashboard-production.up.railway.app,https://sentia-manufacturing-dashboard-development.up.railway.app,https://sentia-manufacturing-dashboard-testing.up.railway.app,http://localhost:3000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Security
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12

# ==========================================
# LOGGING AND MONITORING
# ==========================================
# Logging Configuration
LOG_FILE_PATH=./logs/enterprise-mcp.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60000

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================
# Enable additional debugging in development
ENABLE_DEBUG_LOGGING=false
ENABLE_API_MOCKING=false