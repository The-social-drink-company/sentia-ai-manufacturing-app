# ==================== DATABASE ====================

# PostgreSQL Database Connection (Render)
# Get from: Render Dashboard → Database → Connection Details
DATABASE_URL=postgresql://capliquify_user:YOUR_PASSWORD_HERE@dpg-d3p75uqli9vc73crtj0g-a.oregon-postgres.render.com:5432/capliquify_prod_db

# Alternative: External Database URL (for local development)
# Use this if connecting from outside Render's network
# DATABASE_URL=postgresql://capliquify_user:YOUR_PASSWORD_HERE@dpg-d3p75uqli9vc73crtj0g-a.oregon-postgres.render.com:5432/capliquify_prod_db?ssl=true

# Database Components (for reference)
DB_HOST=dpg-d3p75uqli9vc73crtj0g-a.oregon-postgres.render.com
DB_PORT=5432
DB_NAME=capliquify_prod_db
DB_USER=capliquify_user
DB_PASSWORD=YOUR_PASSWORD_HERE

# ==================== CLERK AUTHENTICATION ====================

# Clerk API Keys
# Get from: https://dashboard.clerk.com → Your App → API Keys
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Clerk Webhook (for subscription management - optional)
# Get from: https://dashboard.clerk.com → Webhooks → Your Endpoint → Signing Secret
CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Clerk Redirect URLs
# Configure authentication flow redirects
VITE_CLERK_SIGN_IN_URL=/sign-in
VITE_CLERK_SIGN_UP_URL=/sign-up
VITE_CLERK_AFTER_SIGN_IN_URL=/dashboard
VITE_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ==================== APPLICATION CONFIG ====================

# Environment
NODE_ENV=development
# Options: development, testing, production

# Server Port
PORT=10000

# Frontend API Base URL
VITE_API_BASE_URL=http://localhost:10000/api

# Application Info
VITE_APP_TITLE=CapLiquify Manufacturing Platform
VITE_APP_VERSION=2.0.0

# Development Mode (bypasses Clerk authentication)
VITE_DEVELOPMENT_MODE=true
# Set to 'false' in production!

# ==================== CORS ====================

# Allowed CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:10000

# ==================== SECURITY ====================

# JWT Secret (for token signing)
JWT_SECRET=YOUR_RANDOM_SECRET_KEY_HERE_MIN_32_CHARS
# Generate with: openssl rand -base64 32

# Session Secret
SESSION_SECRET=YOUR_RANDOM_SESSION_SECRET_HERE_MIN_32_CHARS
# Generate with: openssl rand -base64 32

# ==================== REDIS (Optional - for caching) ====================

# Redis Connection
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:6379
# Leave empty if not using Redis

# ==================== API INTEGRATIONS ====================

# --- Xero ---
XERO_CLIENT_ID=YOUR_XERO_CLIENT_ID_HERE
XERO_CLIENT_SECRET=YOUR_XERO_CLIENT_SECRET_HERE
XERO_REDIRECT_URI=http://localhost:10000/api/integrations/xero/callback

# --- Shopify ---
SHOPIFY_API_KEY=YOUR_SHOPIFY_API_KEY_HERE
SHOPIFY_API_SECRET=YOUR_SHOPIFY_API_SECRET_HERE
SHOPIFY_UK_SHOP_DOMAIN=your-uk-store.myshopify.com
SHOPIFY_UK_ACCESS_TOKEN=shpat_YOUR_UK_ACCESS_TOKEN_HERE
SHOPIFY_US_SHOP_DOMAIN=your-us-store.myshopify.com
SHOPIFY_US_ACCESS_TOKEN=shpat_YOUR_US_ACCESS_TOKEN_HERE

# --- Amazon SP-API ---
AMAZON_REFRESH_TOKEN=YOUR_AMAZON_REFRESH_TOKEN_HERE
AMAZON_LWA_APP_ID=amzn1.application.YOUR_APP_ID_HERE
AMAZON_LWA_CLIENT_SECRET=YOUR_AMAZON_CLIENT_SECRET_HERE
AMAZON_AWS_SELLING_PARTNER_ROLE=arn:aws:iam::YOUR_ACCOUNT:role/YOUR_ROLE
AMAZON_REGION=na

# --- Unleashed ERP ---
UNLEASHED_API_ID=YOUR_UNLEASHED_API_ID_HERE
UNLEASHED_API_KEY=YOUR_UNLEASHED_API_KEY_HERE
UNLEASHED_API_URL=https://api.unleashedsoftware.com

# ==================== AI/ML SERVICES ====================

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_API_KEY_HERE

# OpenAI
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE

# ==================== LOGGING ====================

LOG_LEVEL=info
AI_ANALYTICS_ENABLED=true

# ==================== STRIPE (Optional - for payments) ====================

STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE
STRIPE_ALPHA_PRICE_ID=price_YOUR_ALPHA_PRICE_ID_HERE

