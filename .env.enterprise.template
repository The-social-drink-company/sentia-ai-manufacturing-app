# ========================================
# ENTERPRISE ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ========================================
# CORE CONFIGURATION
# ========================================

# Node Environment (development, test, production)
NODE_ENV=production

# Application Port
PORT=5000

# Application URL (no trailing slash)
APP_URL=https://your-domain.com

# ========================================
# AUTHENTICATION (CLERK)
# ========================================

# Clerk Authentication Keys
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_public_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database (Neon)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Development Database (optional)
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/dev_database

# Test Database (optional)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_database

# ========================================
# REDIS CACHE (OPTIONAL)
# ========================================

REDIS_URL=redis://default:password@localhost:6379
REDIS_TTL=3600

# ========================================
# API INTEGRATIONS
# ========================================

# Amazon SP-API
AMAZON_SP_API_CLIENT_ID=your_amazon_client_id
AMAZON_SP_API_CLIENT_SECRET=your_amazon_client_secret
AMAZON_SP_API_REFRESH_TOKEN=your_amazon_refresh_token
AMAZON_SP_API_REGION=us-east-1
AMAZON_SP_API_MARKETPLACE_ID=ATVPDKIKX0DER

# Shopify API
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

# Xero API
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=https://your-domain.com/api/xero/callback
XERO_TENANT_ID=your_xero_tenant_id

# Unleashed Software API
UNLEASHED_API_ID=your_unleashed_api_id
UNLEASHED_API_KEY=your_unleashed_api_key
UNLEASHED_API_URL=https://api.unleashedsoftware.com

# NetSuite API
NETSUITE_ACCOUNT_ID=your_netsuite_account_id
NETSUITE_CONSUMER_KEY=your_netsuite_consumer_key
NETSUITE_CONSUMER_SECRET=your_netsuite_consumer_secret
NETSUITE_TOKEN_ID=your_netsuite_token_id
NETSUITE_TOKEN_SECRET=your_netsuite_token_secret

# ========================================
# AI & MACHINE LEARNING
# ========================================

# OpenAI API
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORG_ID=org-your_openai_org_id
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL=gemini-pro

# Local LLM (Optional)
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# ========================================
# REAL-TIME & WEBSOCKET
# ========================================

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=5001
WS_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Server-Sent Events
SSE_ENABLED=true
SSE_HEARTBEAT_INTERVAL=30000

# ========================================
# MONITORING & OBSERVABILITY
# ========================================

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog APM (Optional)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=sentia-manufacturing-dashboard

# ========================================
# SECURITY & ENCRYPTION
# ========================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_chars
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_char_iv

# Session Configuration
SESSION_SECRET=your_session_secret_key_min_32_chars
SESSION_NAME=sentia_session
SESSION_MAX_AGE=86400000

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================

# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=Sentia Manufacturing

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#manufacturing-alerts

# ========================================
# STORAGE & MEDIA
# ========================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sentia-manufacturing-assets

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ========================================
# FEATURE FLAGS
# ========================================

# Enterprise Features
ENABLE_AI_FEATURES=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_DIGITAL_TWIN=true
ENABLE_AR_VR=false
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_GLOBAL_COMPLIANCE=true

# Experimental Features
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# RATE LIMITING & THROTTLING
# ========================================

# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls,.json,.xml

# ========================================
# CORS CONFIGURATION
# ========================================

# Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# CORS Credentials
CORS_CREDENTIALS=true

# ========================================
# RAILWAY SPECIFIC
# ========================================

# Railway Environment
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your_railway_project_id
RAILWAY_SERVICE_ID=your_railway_service_id

# Railway Database
RAILWAY_DATABASE_URL=${{Postgres.DATABASE_URL}}

# ========================================
# INTERNATIONALIZATION
# ========================================

# Default Language
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,en-GB,de-DE,fr-FR,es-ES,it-IT,pt-BR,zh-CN,ja-JP,ko-KR,hi-IN,ar-SA

# Timezone
DEFAULT_TIMEZONE=UTC

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Clustering
CLUSTER_ENABLED=true
CLUSTER_WORKERS=0

# ========================================
# LOGGING & DEBUGGING
# ========================================

# Log Level (error, warn, info, debug, trace)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# Debug Settings
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_AUTH=false
DEBUG_API=false

# ========================================
# BACKUP & RECOVERY
# ========================================

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sentia-backups

# ========================================
# COMPLIANCE & AUDIT
# ========================================

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENCRYPTION=true

# GDPR Compliance
ENABLE_GDPR_FEATURES=true
DATA_RETENTION_DAYS=730
ENABLE_DATA_ANONYMIZATION=true

# ========================================
# END OF CONFIGURATION
# ========================================

# Note: This template includes all possible environment variables
# for the enterprise manufacturing dashboard. Not all variables
# are required for basic operation. Start with core variables
# and add others as needed.

# REQUIRED MINIMUM VARIABLES:
# - NODE_ENV
# - DATABASE_URL
# - VITE_CLERK_PUBLISHABLE_KEY
# - CLERK_SECRET_KEY
# - JWT_SECRET

# For Railway deployment, most database and service URLs
# will be automatically provided by Railway's variable interpolation.