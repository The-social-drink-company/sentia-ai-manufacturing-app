# Auto detect text files and perform LF normalization
* text=auto

# Ensure package-lock.json is treated as text (not binary)
package-lock.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.pdf binary

# Source code files - enforce LF line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.toml text eol=lf

# Config files
.env* text eol=lf
Dockerfile* text eol=lf
*.config.js text eol=lf
*.config.mjs text eol=lf