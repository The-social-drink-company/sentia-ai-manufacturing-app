{
  "project": "Sentia Manufacturing Dashboard",
  "version": "2.0.0",
  "platform": "Render",
  "database": "PostgreSQL with pgvector",
  "rules": {
    "security": {
      "enabled": true,
      "autoReview": true,
      "blockOnVulnerability": true,
      "scanBeforeCommit": true
    },
    "testing": {
      "minimumCoverage": 80,
      "requireTests": true,
      "blockOnFailure": true
    },
    "documentation": {
      "requireJSDoc": true,
      "requireADR": true,
      "autoGenerate": false
    },
    "codeQuality": {
      "maxComplexity": 10,
      "maxDuplication": 3,
      "enforceTypes": true,
      "strictMode": true
    }
  },
  "forbiddenPatterns": [
    "railway",
    "neon",
    "console.log",
    "any // TypeScript",
    "// @ts-ignore",
    "// eslint-disable",
    "TODO // without ticket number"
  ],
  "requiredPatterns": [
    "error handling",
    "input validation",
    "authentication check",
    "logging",
    "type definitions"
  ],
  "hooks": {
    "preCommit": [
      "/security-review",
      "pnpm test",
      "pnpm run lint",
      "pnpm run type-check"
    ],
    "prePush": [
      "pnpm run test:coverage",
      "pnpm run build"
    ]
  }
}