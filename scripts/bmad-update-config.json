{
  "enabled": true,
  "autoCommit": true,
  "backupRetention": 5,
  "dryRun": false,
  "preserveProjectFiles": true,
  "updateCheckURL": "https://api.github.com/repos/bmad-code-org/BMAD-METHOD/commits/v6-alpha",
  "repository": {
    "url": "https://github.com/bmad-code-org/BMAD-METHOD.git",
    "branch": "v6-alpha"
  },
  "schedule": {
    "time": "03:00",
    "timezone": "local",
    "skipIfMissed": true
  },
  "projectFiles": {
    "preserveDirectories": [
      "epics",
      "stories",
      "retrospectives",
      "planning",
      "solutioning",
      "status",
      "progress",
      "reports",
      "audit",
      "guides",
      "context"
    ],
    "preserveFiles": [
      "config.yaml",
      "core/core-config.yaml",
      "bmm/config.yaml",
      ".bmad-version"
    ]
  },
  "validation": {
    "checkCriticalFiles": true,
    "verifyProjectFiles": true,
    "rollbackOnFailure": true
  },
  "git": {
    "autoCommit": true,
    "autoPush": false,
    "commitMessageTemplate": "chore: Auto-update BMAD-METHOD to v6-alpha ({{version}})\n\nAutonomous update performed by bmad-auto-update agent.\n\nChanges:\n- Updated framework files (core, BMM module)\n- Preserved all project files (epics, stories, retrospectives)\n- Updated version tracking\n\nðŸ¤– Generated by BMAD Auto-Update Agent\n\nCo-Authored-By: Claude <noreply@anthropic.com>"
  },
  "notifications": {
    "enabled": false,
    "onSuccess": false,
    "onFailure": true,
    "email": {
      "enabled": false,
      "to": null,
      "smtp": null
    },
    "webhook": {
      "enabled": false,
      "url": null,
      "method": "POST"
    },
    "slack": {
      "enabled": false,
      "webhookUrl": null
    }
  },
  "logging": {
    "directory": "logs/bmad-updates",
    "retainDays": 30,
    "verbose": true
  },
  "advanced": {
    "updateTimeout": 600000,
    "maxRetries": 3,
    "retryDelay": 60000,
    "parallelOperations": false
  },
  "metadata": {
    "configVersion": "1.0.0",
    "lastModified": "2025-10-21",
    "description": "Configuration for BMAD-METHOD autonomous update agent"
  }
}
