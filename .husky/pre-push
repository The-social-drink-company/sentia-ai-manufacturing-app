#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-push validation..."

# Run TypeScript type checking
echo "Running TypeScript validation..."
npm run typecheck
if [ $? -ne 0 ]; then
    echo "TypeScript validation failed. Please fix type errors before pushing."
    exit 1
fi

# Note: ESLint and tests currently have dependency issues
# They will be re-enabled once resolved
echo "Pre-push validation completed successfully!"