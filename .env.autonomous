# Autonomous Testing System Configuration
# Copy to .env or add to Railway environment variables

# Core Autonomous Settings
ENABLE_AUTONOMOUS_TESTING=true
AUTONOMOUS_TEST_INTERVAL=*/10 * * * *
AUTO_FIX_ENABLED=true
AUTO_DEPLOY_ENABLED=true
RAILWAY_AUTO_DEPLOY=true

# Test Configuration
TEST_TIMEOUT=60000
MAX_CONCURRENT_TESTS=5
FAILURE_THRESHOLD=3
ROLLBACK_ON_FAILURE=true

# Agent Configuration
AGENT_MAX_FIXES_PER_CYCLE=10
AGENT_LEARNING_ENABLED=true
AGENT_PATTERN_ANALYSIS=true

# Deployment Settings
DEPLOY_BRANCH=development
DEPLOY_WAIT_TIME=30000
DEPLOY_RETRY_COUNT=3

# Monitoring Configuration
MONITOR_DASHBOARD_ENABLED=true
MONITOR_REAL_TIME_UPDATES=true
MONITOR_HISTORY_RETENTION=7

# Safety Settings
EMERGENCY_STOP_ENABLED=true
MAX_FAILURES_BEFORE_STOP=10
ADMIN_NOTIFICATION_ENABLED=true

# Railway Specific
RAILWAY_ENVIRONMENT=development
RAILWAY_PROJECT_ID=${RAILWAY_PROJECT_ID}
RAILWAY_TOKEN=${RAILWAY_TOKEN}