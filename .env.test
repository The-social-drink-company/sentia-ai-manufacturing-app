# Test Environment Variables
# Use for UAT and staging

NODE_ENV=test
PORT=5000

# Application URLs
APP_URL=https://test.sentia-manufacturing.railway.app
API_BASE_URL=https://test.sentia-manufacturing.railway.app/api
FRONTEND_URL=https://test.sentia-manufacturing.railway.app

# Database Configuration (Neon Test)
DATABASE_URL=postgresql://username:password@host/database_test?sslmode=require
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_TIMEOUT=20000

# Redis Configuration
REDIS_URL=redis://default:password@host:port
REDIS_CACHE_TTL=1800
REDIS_SESSION_TTL=43200

# Authentication (Clerk Test)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx

# JWT Configuration
JWT_ACCESS_SECRET=test-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=test-jwt-refresh-secret-change-in-production
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=14d

# Session Configuration
SESSION_SECRET=test-session-secret-change-in-production
SESSION_NAME=sentia_test_session
SESSION_MAX_AGE=43200000

# API Integrations (Sandbox/Test)
AMAZON_CLIENT_ID=amzn1.test.xxxxx
AMAZON_CLIENT_SECRET=test-secret
AMAZON_REFRESH_TOKEN=test-token
AMAZON_ACCESS_KEY_ID=test-key
AMAZON_SECRET_ACCESS_KEY=test-secret
AMAZON_ROLE_ARN=arn:aws:iam::test:role/test
AMAZON_MARKETPLACE_ID=test-marketplace

SHOPIFY_SHOP_DOMAIN=sentia-test.myshopify.com
SHOPIFY_API_KEY=test-key
SHOPIFY_API_SECRET=test-secret
SHOPIFY_ACCESS_TOKEN=test-token
SHOPIFY_WEBHOOK_SECRET=test-webhook

UNLEASHED_API_ID=test-id
UNLEASHED_API_KEY=test-key
UNLEASHED_API_URL=https://sandbox-api.unleashedsoftware.com

XERO_CLIENT_ID=test-client
XERO_CLIENT_SECRET=test-secret
XERO_TENANT_ID=test-tenant
XERO_WEBHOOK_KEY=test-webhook

# Working Capital Configuration
COST_OF_CAPITAL=0.12
WC_LIMIT_DEFAULT=500000
WC_WARNING_THRESHOLD=0.7
PAYMENT_TERMS_DEFAULT=30
INVENTORY_TURNOVER_TARGET=12

# Queue Configuration
QUEUE_CONCURRENCY=3
QUEUE_MAX_RETRIES=2
QUEUE_BACKOFF_DELAY=3000
WORKER_CONCURRENCY=1

# Monitoring
TELEMETRY_KEY=test-telemetry
SENTRY_DSN=https://test@sentry.io/test
SENTRY_ENVIRONMENT=test
SENTRY_TRACES_SAMPLE_RATE=0.5
LOG_LEVEL=debug
LOG_FORMAT=json

# Email Configuration
EMAIL_FROM=test@sentia.com
EMAIL_SMTP_HOST=smtp.mailtrap.io
EMAIL_SMTP_PORT=2525
EMAIL_SMTP_USER=test-user
EMAIL_SMTP_PASSWORD=test-password

# Security
CORS_ORIGINS=https://test.sentia-manufacturing.railway.app,http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
HELMET_CSP_ENABLED=false
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax

# Feature Flags
FEATURE_FORECASTING=true
FEATURE_OPTIMIZATION=true
FEATURE_WORKING_CAPITAL=true
FEATURE_SSE_UPDATES=true
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true

# Testing
TEST_MODE=true
MOCK_EXTERNAL_APIS=true
E2E_BASE_URL=https://test.sentia-manufacturing.railway.app