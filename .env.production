XERO_WEBHOOK_KEY=xxxxx

# Working Capital Configuration
COST_OF_CAPITAL=0.12
WC_LIMIT_DEFAULT=1000000
WC_WARNING_THRESHOLD=0.8
PAYMENT_TERMS_DEFAULT=30
INVENTORY_TURNOVER_TARGET=12

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=5000
WORKER_CONCURRENCY=2

# Monitoring & Telemetry
TELEMETRY_KEY=xxxxx
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
NEW_RELIC_LICENSE_KEY=xxxxx
NEW_RELIC_APP_NAME=sentia-manufacturing-production

# Email Configuration
EMAIL_FROM=noreply@sentia.com
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASSWORD=SG.xxxxx

# Security
CORS_ORIGINS=https://sentia-manufacturing.railway.app,https://sentia.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_CSP_ENABLED=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Feature Flags
FEATURE_FORECASTING=true
FEATURE_OPTIMIZATION=true
FEATURE_WORKING_CAPITAL=true
FEATURE_SSE_UPDATES=true
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=10m
LOG_ROTATION_MAX_FILES=30
LOG_ROTATION_DATE_PATTERN=YYYY-MM-DD

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sentia-backups-prod

# Performance
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=16
CLUSTER_WORKERS=auto