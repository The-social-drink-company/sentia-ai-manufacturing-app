{
  "name": "sentia-docs",
  "version": "1.0.0",
  "description": "CapLiquify Manufacturing Platform Documentation Portal",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "docs:dev": "next dev -p 3001",
    "build": "next build",
    "docs:build": "next build",
    "start": "next start -p 3001",
    "export": "next build && next export",
    "lint": "next lint",
    "docs:lint": "markdownlint '**/*.md' --ignore node_modules --ignore .next && vale .",
    "docs:linkcheck": "markdown-link-check **/*.md --config ../.markdown-link-check.json",
    "docs:search:index": "node scripts/generate-search-index.js",
    "api:docs": "node scripts/generate-api-docs.js",
    "pdf-export": "node scripts/export-pdf.js",
    "check-links": "node scripts/check-links.js",
    "validate": "vale .",
    "governance:check": "node scripts/check-governance.js"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@next/mdx": "^14.0.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-highlight.js": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "gray-matter": "^4.0.3",
    "fuse.js": "^7.0.0",
    "react-hotkeys-hook": "^4.4.1",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.0.0",
    "puppeteer": "^21.0.0",
    "linkinator": "^4.1.0",
    "vale": "^2.29.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}