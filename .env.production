# Production Environment Variables
# Copy this file to .env.local and fill in your values

# Railway Configuration
PORT=5000
# NODE_ENV is set automatically by Vite
RAILWAY_ENVIRONMENT=production

# Database (Neon PostgreSQL) - Use production database
DATABASE_URL=postgresql://username:password@host/production_database?sslmode=require
PROD_DATABASE_URL=postgresql://username:password@host/production_database?sslmode=require

# Authentication (Clerk) - Use production keys
CLERK_PUBLISHABLE_KEY=pk_live_your_production_key_here
CLERK_SECRET_KEY=sk_live_your_production_secret_here
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_production_key_here

# API Configuration
VITE_API_BASE_URL=https://your-production-domain.up.railway.app/api
API_BASE_URL=https://your-production-domain.up.railway.app/api

# External Services (Optional)
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
AMAZON_SP_API_KEY=your_amazon_api_key
AMAZON_SP_API_SECRET=your_amazon_api_secret
UNLEASHED_API_ID=your_unleashed_api_id
UNLEASHED_API_KEY=your_unleashed_api_key

# AI Services (Optional)
OPENAI_API_KEY=sk-your_openai_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=error

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SSE=true
ENABLE_WEBSOCKETS=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Session Configuration
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here