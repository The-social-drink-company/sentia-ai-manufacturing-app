# Sentia Manufacturing Dashboard Environment Variables

# Authentication - Get actual keys from Render dashboard
VITE_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key-here
CLERK_SECRET_KEY=your-clerk-secret-key-here

# Database - Get actual connection strings from Render dashboard
DATABASE_URL=your-render-database-connection-string
TEST_DATABASE_URL=your-render-test-database-connection-string
PROD_DATABASE_URL=your-render-production-database-connection-string



# Application
NODE_ENV=development
BRANCH=development
PORT=10000
VITE_API_BASE_URL=https://sentia-backend-prod.onrender.com
VITE_DEVELOPMENT_MODE=true
CORS_ORIGINS=https://sentia-frontend-prod.onrender.com

# Redis (optional)
REDIS_URL=redis://localhost:6379

# External API Keys - Set via Render dashboard for security

# Shopify Multi-Store Configuration (UK/EU + USA stores)
SHOPIFY_UK_SHOP_DOMAIN=your-shopify-uk-domain
SHOPIFY_UK_ACCESS_TOKEN=your-shopify-uk-access-token
SHOPIFY_US_SHOP_DOMAIN=your-shopify-us-domain
SHOPIFY_US_ACCESS_TOKEN=your-shopify-us-access-token

# Amazon SP-API Configuration (OAuth 2.0 + AWS IAM)
AMAZON_REFRESH_TOKEN=your-amazon-refresh-token
AMAZON_LWA_APP_ID=your-lwa-app-id
AMAZON_LWA_CLIENT_SECRET=your-lwa-client-secret
AMAZON_AWS_SELLING_PARTNER_ROLE=your-aws-selling-partner-role
AMAZON_REGION=na

# Unleashed ERP Configuration
UNLEASHED_API_KEY=your-unleashed-api-key
UNLEASHED_API_ID=your-unleashed-api-id
UNLEASHED_API_URL=https://api.unleashedsoftware.com
# Comma-separated list of Unleashed endpoints to disable (e.g., StockMovements,CustomEndpoint)
# Use this if certain endpoints return 403 Forbidden due to API tier limitations
UNLEASHED_DISABLE_ENDPOINTS=

# MCP Server Configuration
MCP_SERVER_URL=https://sentia-mcp-prod.onrender.com
VITE_MCP_SERVER_URL=https://sentia-mcp-prod.onrender.com
MCP_ENABLE_WEBSOCKET=true
MCP_SERVER_HEALTH_CHECK_INTERVAL=30000
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# AI Provider API Keys - Set via Render dashboard for security
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Xero Integration (required for financial data)
XERO_CLIENT_ID=your-xero-client-id-here
XERO_CLIENT_SECRET=your-xero-client-secret-here
